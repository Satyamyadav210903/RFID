<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rfid_write"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    tools:context=".RFIDWriteActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="Write Tag"
        app:titleTextColor="?attr/colorOnPrimary"
        app:titleCentered="true" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Scan Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOnSurface"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Scan &amp; Select Tag"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonScan"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:text="Start Scanning"
                            android:textAllCaps="false"
                            app:icon="@drawable/ic_rfid_scan"
                            app:iconGravity="textStart"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonClear"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginStart="8dp"
                            android:text="Clear"
                            android:textAllCaps="false"
                            app:icon="@android:drawable/ic_menu_close_clear_cancel"
                            app:iconGravity="textStart"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textScanStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ready to scan"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurface"
                        android:alpha="0.7"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewTags"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="8dp"
                        android:background="#10000000" />
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tap a tag in the list above to select it"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Write Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOnSurface"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2. Write New Data"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Target Tag (EPC):"
                         android:textSize="12sp"
                         android:textColor="?attr/colorOnSurface"
                         android:alpha="0.7"/>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/textTargetTag"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="None Selected"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:padding="8dp"
                            android:background="#10000000" />

                        <ImageButton
                            android:id="@+id/buttonCopy"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_content_copy"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Copy EPC"
                            app:tint="?attr/colorOnSurface"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="New EPC Data (Hex)"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextWriteData"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textCapCharacters"
                                android:fontFamily="monospace"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageButton
                            android:id="@+id/buttonPaste"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/ic_content_paste"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Paste Data"
                            app:tint="?attr/colorOnSurface"
                            android:layout_marginStart="8dp"/>

                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note: Input must be Hex string with length divisible by 4 (e.g., 1234, ABCD)"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"/>
                    
                    <CheckBox
                        android:id="@+id/checkBoxFilter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Use Filter (Target specific tag)"
                        android:checked="true"
                        android:enabled="false"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonWrite"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="WRITE TAG"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:cornerRadius="8dp"
                        android:backgroundTint="?attr/colorError" 
                        app:icon="@drawable/ic_rfid_scan"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button" />
                        <!-- Note: Using colorError to signify destructive action but might need custom color -->

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
